(function (teapo) {
    (function (storage) {
        (function (attached) {
            (function (dom) {
                var UpdateStorage = (function () {
                    function UpdateStorage(_parentElement, _byName, _document) {
                        this._parentElement = _parentElement;
                        this._byName = _byName;
                        this._document = _document;
                    }
                    UpdateStorage.prototype.update = function (file, property, value, callback) {
                        var element = this._getExistingElement(file);

                        if (!element) {
                            element = UpdateStorage.createElement(this._parentElement, file, this._document);
                            this._parentElement.setAttribute('data-teapo-file-count', this._parentElement.children.length);
                            this._byName[file] = element;
                        }

                        UpdateStorage.updateProperty(element, property, value);

                        this._parentElement.setAttribute('data-edited-utc', teapo.dateNow() + '');

                        callback(null);
                    };

                    UpdateStorage.prototype.remove = function (file, callback) {
                        var element = this._getExistingElement(file);
                        if (!element) {
                            callback(new Error('file does not exist.'));
                            return;
                        }

                        element.parentElement.removeChild(element);
                        delete this._byName[file];

                        this._parentElement.setAttribute('data-edited-utc', teapo.dateNow() + '');

                        callback(null);
                    };

                    UpdateStorage.createElement = function (parentElement, fullPath, _document) {
                        var element = _document.createElement('div');
                        element.setAttribute('data-teapo-path', fullPath);
                        parentElement.appendChild(element);
                        return element;
                    };

                    UpdateStorage.updateProperty = function (element, property, value) {
                        element.setAttribute('data-meta-' + teapo.encodeForAttributeName(property), value);
                    };

                    UpdateStorage.prototype._getExistingElement = function (fullPath) {
                        var element = this._byName.hasOwnProperty(fullPath) ? this._byName[fullPath] : null;
                        return element;
                    };
                    return UpdateStorage;
                })();
                dom.UpdateStorage = UpdateStorage;
            })(attached.dom || (attached.dom = {}));
            var dom = attached.dom;
