(function (teapo) {
    (function (storage) {
        (function (attached) {
            (function (dom) {
                var DetectStorage = (function () {
                    function DetectStorage(_parent, _document) {
                        if (typeof _document === "undefined") { _document = document; }
                        this._parent = _parent;
                        this._document = _document;
                    }
                    DetectStorage.prototype.detectStorageAsync = function (uniqueKey, callback) {
                        try  {
                            var load = this.detectStorageSync();
                            callback(null, load);
                        } catch (error) {
                            callback(error, null);
                        }
                    };

                    DetectStorage.prototype.detectStorageSync = function () {
                        if (!this._parent)
                            throw new Error('Parent DOM element is null.');

                        if (!this._document)
                            throw new Error('Expected non-null document argument.');

                        var load = new dom.LoadStorage(this._parent, this._document);
                        return load;
                    };
                    return DetectStorage;
                })();
                dom.DetectStorage = DetectStorage;
            })(attached.dom || (attached.dom = {}));
            var dom = attached.dom;
        })(storage.attached || (storage.attached = {}));
        var attached = storage.attached;
