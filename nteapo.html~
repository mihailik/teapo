  <span data-bind="text: name" class=teapo-test-name></span><!-- ko if: typeof runtime()==='number' -->
  <span data-bind="text: (runtime()/1000).toFixed(3)+'s'" class=teapo-test-runtime></span><!-- /ko --><!-- ko if:failure -->
