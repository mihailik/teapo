var teapo;
(function (teapo) {
    (function (storage) {
        (function (attached) {
            (function (dom) {
                var LoadStorage = (function () {
                    function LoadStorage(_parentElement, _document) {
                        this._parentElement = _parentElement;
                        this._document = _document;
                        this.editedUTC = 0;
                        this._byName = {};
                        // populate editedUTC from corresponding attribute
                        var editedUTCValue = this._parentElement.getAttribute('data-edited-utc');
                        if (editedUTCValue) {
                            try  {
                                this.editedUTC = parseInt(editedUTCValue);
                            } catch (parseEditedUTCError) {
                                // TODO: logging safely?
                                //console.log('parsing editedUTC ' + parseEditedUTCError);
                            }
                        }
                    }
                    LoadStorage.prototype.load = function (recipient) {
                        this._ensureIdSet();

                        var dodgyElements = [];

                        var fileCount = 0;
                        try  {
                            var fileCountStr = this._parentElement.getAttribute('data-teapo-file-count');
                            if (fileCountStr)
                                fileCount = parseInt(fileCountStr);
                        } catch (error) {
                        }

                        if (fileCountStr)
                            recipient.files(fileCount);

                        // reset the speculative count hint, we'll recalculate
                        fileCount = 0;
                        for (var i = 0; i < this._parentElement.children.length; i++) {
                            var fileElement = this._parentElement.children[i];
                            if (this._loadFromElement(fileElement, recipient))
                                fileCount++;
                            else
                                dodgyElements.push(fileElement);
                        }

                        for (var i = 0; i < dodgyElements.length; i++) {
                            this._parentElement.removeChild(dodgyElements[i]);
                        }

                        this._parentElement.setAttribute('data-teapo-file-count', fileCount);

                        var updater = this._createUpdater();
                        recipient.completed(updater);
                    };

                    LoadStorage.prototype.migrate = function (editedUTC, filesByName, callback) {
                        this._ensureIdSet();

                        this._wipeExistingElement();
                        if (editedUTC)
                            this._parentElement.setAttribute('data-edited-utc', editedUTC + '');
                        this.editedUTC = editedUTC;

                        //console.log('migrate(' + editedUTC + ', ' , filesByName, this._parentElement);
                        var fileCount = 0;
                        if (filesByName) {
                            for (var fullPath in filesByName)
                                if (filesByName.hasOwnProperty(fullPath)) {
                                    fileCount++;
                                    var element = dom.UpdateStorage.createElement(this._parentElement, fullPath, this._document);
                                    var pbag = filesByName[fullPath];
                                    var szByAttr = {};
                                    for (var pname in pbag)
                                        if (pbag.hasOwnProperty(pname)) {
                                            var content = pbag[pname];
                                            dom.UpdateStorage.updateProperty(element, pname, content);
                                        }
                                    this._byName[fullPath] = element;
                                }
                        }

                        this._parentElement.setAttribute('data-teapo-file-count', fileCount);
                        var updater = this._createUpdater();

                        callback(null, updater);
                    };

                    LoadStorage.prototype._createUpdater = function () {
                        var updater = new dom.UpdateStorage(this._parentElement, this._byName, this._document);
                        return updater;
                    };

                    LoadStorage.prototype._ensureIdSet = function () {
                        if (!this._parentElement.id)
                            this._parentElement.id = 'teapo-data-storage';
                    };

                    LoadStorage.prototype._wipeExistingElement = function () {
                        // clear out the attributes
                        var attrs = [];
                        for (var i = 0; i < this._parentElement.attributes.length; i++) {
                            attrs[i] = this._parentElement.attributes.item(i);
                        }

                        for (var i = 0; i < attrs.length; i++) {
                            if (attrs[i].name && teapo.startsWith(attrs[i].name, 'data-meta-'))
                                this._parentElement.removeAttribute(attrs[i].name);
                        }

                        // clear out the content
                        this._parentElement.innerHTML = '';
                        this._parentElement.setAttribute('data-teapo-file-count', '0');

                        // clear out the cache
                        this._byName = {};
                    };

                    LoadStorage.prototype._loadFromElement = function (element, recipient) {
                        if (!element.getAttribute) {
                            return false;
                        }

                        var fullPath = element.getAttribute('data-teapo-path');
                        if (!fullPath) {
                            return false;
                        }

                        if (this._byName.hasOwnProperty(fullPath)) {
                            return false;
                        }

                        var result = {};
                        var anyProperty = false;
                        for (var i = 0; i < element.attributes.length; i++) {
                            var a = element.attributes.item(i);

                            var prefix = 'data-meta-';
                            if (!teapo.startsWith(a.name, prefix))
                                continue;

                            var attrName = teapo.decodeFromAttributeName(a.name.slice(prefix.length));
                            var content = a.value;
                            result[attrName] = content;
                            anyProperty = true;
                        }

                        if (!anyProperty) {
                            // fallback for legacy support
                            result[''] = teapo.decodeFromInnerHTML(element.innerHTML);
                        }

                        recipient.file(fullPath, result);
                        this._byName[fullPath] = element;

                        return true;
                    };
                    return LoadStorage;
                })();
                dom.LoadStorage = LoadStorage;
            })(attached.dom || (attached.dom = {}));
            var dom = attached.dom;
        })(storage.attached || (storage.attached = {}));
        var attached = storage.attached;
    })(teapo.storage || (teapo.storage = {}));
    var storage = teapo.storage;
})(teapo || (teapo = {}));
var teapo;
(function (teapo) {
    (function (storage) {
        (function (attached) {
            (function (dom) {
                var StorageAccess = (function () {
                    function StorageAccess(_parentElement, _byName, _document) {
                        this._parentElement = _parentElement;
                        this._byName = _byName;
                        this._document = _document;
                    }
                    StorageAccess.prototype.update = function (byFullPath, timestamp, callback) {
                        for (var fullPath in byFullPath)
                            if (byFullPath.hasOwnProperty(fullPath)) {
                                var updateProperties = byFullPath[fullPath];
                                var element = this._getExistingElement(fullPath);

                                if (updateProperties === null) {
                                    if (element) {
                                        this._parentElement.removeChild(element);
                                    }
                                } else {
                                    if (!element) {
                                        element = StorageAccess.createElement(this._parentElement, fullPath, this._document);
                                        this._byName[fullPath] = element;
                                    }
                                    for (var p in updateProperties)
                                        if (updateProperties.hasOwnProperty(p)) {
                                            var v = updateProperties[p];
                                            var attrName = 'tp-' + teapo.encodeForAttributeName(p);
                                            if (v === null)
                                                element.removeAttribute(attrName);
                                            else
                                                element.setAttribute(attrName, v);
                                        }
                                }
                            }

                        this._parentElement.setAttribute('data-teapo-file-count', this._parentElement.children.length);
                        this._parentElement.setAttribute('data-edited-utc', timestamp);

                        callback(null);
                    };

                    StorageAccess.prototype.read = function (fullPaths, callback) {
                        var byFullPath = {};
                        if (fullPaths === null || typeof fullPaths === 'undefined') {
                            for (var fullPath in this._byName)
                                if (this._byName.hasOwnProperty(fullPath)) {
                                    var element = this._getExistingElement(fullPaths[i]);
                                    var propBag = this._readFileProperties(element);
                                    byFullPath[fullPaths[i]] = propBag;
                                }
                        } else {
                            for (var i = 0; i < fullPaths.length; i++) {
                                var element = this._getExistingElement(fullPaths[i]);
                                var propBag = element ? this._readFileProperties(element) : null;
                                byFullPath[fullPaths[i]] = propBag;
                            }
                        }
                        callback(null, byFullPath);
                    };

                    StorageAccess.prototype._readFileProperties = function (element) {
                        var properties = {};
                        for (var i = 0; i < element.attributes.length; i++) {
                            var attr = element.attributes.item(i);
                            if (!teapo.startsWith(attr.name.toLowerCase(), 'tp-'))
                                continue;
                            var propertyName = teapo.decodeFromAttributeName(attr.name.slice(3));
                            properties[propertyName] = attr.value;
                        }
                        return properties;
                    };

                    StorageAccess.prototype._getExistingElement = function (fullPath) {
                        var element = this._byName.hasOwnProperty(fullPath) ? this._byName[fullPath] : null;
                        return element;
                    };

                    StorageAccess.createElement = function (parentElement, fullPath, _document) {
                        var element = _document.createElement('div');
                        element.setAttribute('data-teapo-path', fullPath);
                        parentElement.appendChild(element);
                        return element;
                    };
                    return StorageAccess;
                })();
                dom.StorageAccess = StorageAccess;
            })(attached.dom || (attached.dom = {}));
            var dom = attached.dom;
        })(storage.attached || (storage.attached = {}));
        var attached = storage.attached;
    })(teapo.storage || (teapo.storage = {}));
    var storage = teapo.storage;
})(teapo || (teapo = {}));
