                    if (!errorEvent)
                        return null;

                    return new Error(details + ' ' + errorEvent.message + ' ' + errorEvent.lineno);
                }
                indexedDB.wrapErrorEvent = wrapErrorEvent;
            })(attached.indexedDB || (attached.indexedDB = {}));
