var teapo;
(function (teapo) {
    (function (boot) {
        var StorageLoader = (function () {
            function StorageLoader(_dom, _storageElement, _uniqueKey) {
                this._dom = _dom;
                this._storageElement = _storageElement;
                this._uniqueKey = _uniqueKey;
                this._callbacks = null;
                this._indexedDBDetectCompleted = false;
                this._webSqlDetectCompleted = false;
                this._persistenceName = null;
                this._persistence = null;
            }
            StorageLoader.prototype.loadStorage = function (callbacks) {
                var _this = this;
                if (this._callbacks)
                    throw new Error('Cannot load storage twice.');

                this._callbacks = callbacks;

                try  {
                    this._domStorage = new teapo.storage.attached.dom.DetectStorage(this._storageElement, this._dom.documenOverride).detectStorageSync();
                } catch (err) {
                    this._callbacks.detectionComplete(err, null, null, null);
                    return;
                }

                var detectIndexedDB = new teapo.storage.attached.indexedDB.DetectStorage();
                var detectWebSQL = new teapo.storage.attached.webSQL.DetectStorage();

                detectIndexedDB.detectStorageAsync(this._uniqueKey, function (error, load) {
                    _this._indexedDBDetectCompleted = true;

                    if (error) {
                        if (!_this._webSqlDetectCompleted)
                            return;

                        // revert to webSQL results
                        _this._detectCompleted();
                    } else {
                        _this._persistence = load;
                        _this._persistenceName = 'indexedDB';

                        _this._detectCompleted();
                    }
                });

                detectWebSQL.detectStorageAsync(this._uniqueKey, function (error, load) {
                    _this._webSqlDetectCompleted = true;

                    if (_this._persistence)
                        return;

                    _this._persistence = load;
                    if (_this._indexedDBDetectCompleted)
                        _this._detectCompleted();
                });
            };

            StorageLoader.prototype._detectCompleted = function () {
                var _this = this;
                var loadingFromPersistence = this._persistence && this._persistence.editedUTC > this._domStorage.editedUTC;

                var sourceLoad = loadingFromPersistence ? this._persistence : this._domStorage;
                var targetLoad = loadingFromPersistence ? this._domStorage : this._persistence;

                this._callbacks.detectionComplete(null, this._persistenceName, sourceLoad.editedUTC, loadingFromPersistence);

                var byFullPath = {};
                var totalFileCount = 0;
                var loadedFileCount = 0;
                sourceLoad.load({
                    files: function (fileCount) {
                        totalFileCount = fileCount;
                    },
                    file: function (fullPath, values) {
                        byFullPath[fullPath] = values;
                        loadedFileCount++;
                        _this._callbacks.loadProgress(totalFileCount || 140, loadedFileCount, fullPath);
                    },
                    completed: function (sourceUpdater) {
                        if (!targetLoad) {
                            _this._callbacks.loadComplete(null, byFullPath, sourceUpdater, null);
                            return;
                        }

                        targetLoad.migrate(sourceLoad.editedUTC, byFullPath, function (err, targetUpdater) {
                            if (err) {
                                _this._callbacks.loadComplete(err, byFullPath, null, null);
                            } else {
                                _this._callbacks.loadComplete(null, byFullPath, loadingFromPersistence ? targetUpdater : sourceUpdater, loadingFromPersistence ? sourceUpdater : targetUpdater);
                            }
                        });
                    },
                    failed: function (error) {
                        _this._callbacks.loadComplete(error, byFullPath, null, null);
                    }
                });
            };
            return StorageLoader;
        })();
        boot.StorageLoader = StorageLoader;
    })(teapo.boot || (teapo.boot = {}));
    var boot = teapo.boot;
})(teapo || (teapo = {}));
