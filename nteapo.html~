(function (teapo) {
    (function (tests) {
        (function (DomStorageTests) {
            function constructor_nullArgs_succeeds() {
                new teapo.storage.attached.dom.DetectStorage(null, null);
            }
            DomStorageTests.constructor_nullArgs_succeeds = constructor_nullArgs_succeeds;

            function constructor_dummyElement_succeeds() {
                var dummyElement = document.createElement('div');
                new teapo.storage.attached.dom.DetectStorage(dummyElement);
            }
            DomStorageTests.constructor_dummyElement_succeeds = constructor_dummyElement_succeeds;

            function detectStorageAsync_whenNullPassedToConstructor_throwsError() {
                var s = new teapo.storage.attached.dom.DetectStorage(null);
                var err;
                s.detectStorageAsync('', function (error, loaded) {
                    return err = error;
                });

                if (!err)
                    throw new Error('No exception.');
            }
            DomStorageTests.detectStorageAsync_whenNullPassedToConstructor_throwsError = detectStorageAsync_whenNullPassedToConstructor_throwsError;

            function detectStorageAsync_whenTwoNullsPassedToConstructor_throwsError() {
                var s = new teapo.storage.attached.dom.DetectStorage(null, null);
                var err;
                s.detectStorageAsync('', function (error, loaded) {
                    return err = error;
                });

                if (!err)
                    throw new Error('No exception.');
            }
            DomStorageTests.detectStorageAsync_whenTwoNullsPassedToConstructor_throwsError = detectStorageAsync_whenTwoNullsPassedToConstructor_throwsError;

            function detectStorageAsync_dummyElement_editedUTC_falsy(callback) {
                var dummyElement = document.createElement('div');
                var s = new teapo.storage.attached.dom.DetectStorage(dummyElement);

                s.detectStorageAsync('', function (error, loaded) {
                    if (error) {
                        callback(error);
                        return;
                    }

                    if (loaded.editedUTC)
                        callback(new Error(loaded.editedUTC));
                    else
                        callback(null);
                });
            }
            DomStorageTests.detectStorageAsync_dummyElement_editedUTC_falsy = detectStorageAsync_dummyElement_editedUTC_falsy;

            DomStorageTests.browser;
            DomStorageTests.browserNew;
             {
                var byName = {};
                function detectStorageAsync(uniqueKey, callback) {
                    var detect = byName[uniqueKey];
                    if (!detect)
                        byName[uniqueKey] = detect = document.createElement('div');

                    var result = new teapo.storage.attached.dom.DetectStorage(detect);
                    result.detectStorageAsync(null, callback);
                }

                function detectStorageAsync2(uniqueKey, callback) {
                    var detect = byName[uniqueKey];
                    if (!detect)
                        byName[uniqueKey] = detect = document.createElement('div');

                    var result = new teapo.storage.attached.dom.StorageDetect(detect);
                    result.detect(null, callback);
                }

                DomStorageTests.browser = new tests.AttachedStorageTests({ detectStorageAsync: detectStorageAsync });
                DomStorageTests.browserNew = new tests.AttachedStorageTestsNew({ detect: detectStorageAsync2 });
            }
        })(tests.DomStorageTests || (tests.DomStorageTests = {}));
        var DomStorageTests = tests.DomStorageTests;
    })(teapo.tests || (teapo.tests = {}));
    var tests = teapo.tests;
})(teapo || (teapo = {}));
