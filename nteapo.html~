(function (teapo) {
    (function (docs) {
        var EditorPool = (function () {
            function EditorPool(options, _document) {
                if (typeof _document === "undefined") { _document = document; }
                this.options = options;
                this._document = _document;
                this._instances = [];
            }
            EditorPool.prototype.requestEditor = function () {
                if (this._instances.length)
                    return this._instances.pop();

                var host = this._document.createElement('div');
                return new CodeMirror(host, this.options);
            };

            EditorPool.prototype.releaseEditor = function (editor) {
                this._instances.push(editor);
            };
            return EditorPool;
        })();
        docs.EditorPool = EditorPool;
    })(teapo.docs || (teapo.docs = {}));
