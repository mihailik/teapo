(function (teapo) {
    (function (storage) {
        (function (attached) {
            (function (dom) {
                var StorageDetect = (function () {
                    function StorageDetect(_parent, _document) {
                        if (typeof _document === "undefined") { _document = document; }
                        this._parent = _parent;
                        this._document = _document;
                    }
                    StorageDetect.prototype.detect = function (uniqueKey, callback) {
                        var editedUTC = 0;

                        var editedUTCValue = this._parent.getAttribute('data-edited-utc');
                        if (editedUTCValue) {
                            try  {
                                editedUTC = parseInt(editedUTCValue);
                            } catch (parseEditedUTCError) {
                            }
                        }

                        var dodgyElements = [];
                        var elementMap = {};
                        var files = [];
                        for (var i = 0; i < this._parent.children.length; i++) {
                            var element = this._parent.children.item(i);
                            var fullPath = this._getFullPath(element);
                            if (!fullPath || elementMap.hasOwnProperty(fullPath)) {
                                dodgyElements.push(element);
                            } else {
                                elementMap[fullPath] = element;
                                files.push(fullPath);
                            }
                        }

                        for (var i = 0; i < dodgyElements.length; i++) {
                            this._parent.removeChild(dodgyElements[i]);
                        }

                        var access = new dom.StorageAccess(this._parent, elementMap, this._document);

                        callback(null, {
                            editedUTC: editedUTC,
                            files: files
                        }, access);
                    };

                    StorageDetect.prototype._getFullPath = function (element) {
                        if (!element.getAttribute) {
                            return null;
                        }

                        var fullPath = element.getAttribute('data-teapo-path');
                        return fullPath;
                    };
                    return StorageDetect;
                })();
                dom.StorageDetect = StorageDetect;
            })(attached.dom || (attached.dom = {}));
            var dom = attached.dom;
        })(storage.attached || (storage.attached = {}));
        var attached = storage.attached;
    })(teapo.storage || (teapo.storage = {}));
