(function (teapo) {
    (function (docs) {
        (function (CodeMirrorServices) {
            var DocumentState = (function () {
                function DocumentState() {
                    this._doc = null;
                    this.onImmediateCursorActivity = null;
                    this.onAfterCursorActivity = null;
                }
                DocumentState.prototype.doc = function () {
                    if (!this._doc) {
                        var text = this.loadText();
                        this._doc = new CodeMirror.Doc(text);
                    }

                    return this._doc;
                };

                DocumentState.prototype._initDoc = function (doc) {
                    var _this = this;
                    CodeMirror.on(doc, 'change', function (d, change) {
                        return _this._onchange(change);
                    });
                    CodeMirror.on(doc, 'cursorActivity', function (d) {
                        return _this._oncursorActivity();
                    });
                };

                DocumentState.prototype._onchange = function (change) {
                };

                DocumentState.prototype._oncursorActivity = function () {
                };
                return DocumentState;
            })();
            CodeMirrorServices.DocumentState = DocumentState;
        })(docs.CodeMirrorServices || (docs.CodeMirrorServices = {}));
        var CodeMirrorServices = docs.CodeMirrorServices;
    })(teapo.docs || (teapo.docs = {}));
    var docs = teapo.docs;
})(teapo || (teapo = {}));
